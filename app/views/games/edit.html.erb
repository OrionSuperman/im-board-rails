<form action='/games/<%= @game.id %>' method='post' class="form-horizontal" role="form">
<input type='hidden' name='_method' value='patch'>
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="form-group">
    <label class="control-label col-sm-2" for="name">Game Name:</label>
    <div class="col-sm-4">
      <input type="text" name="game[name]" class="form-control" id="game" value="<%= @game.name %>">
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="minplayers">Minimum Players:</label>
    <div class="col-sm-2"> 
      <input type="number" name="game[minplayers]" class="form-control" id="minplayers" value="<%= @game.minplayers %>">
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="maxplayers">Maximum Players:</label>
    <div class="col-sm-2"> 
      <input type="number" name="game[maxplayers]" class="form-control" id="maxplayers" value="<%= @game.maxplayers %>">
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="length">Game Length:</label>
    <div class="col-sm-4"> 
      <input type="text" name="game[length]" class="form-control" id="length" value="<%= @game.length %>">
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="description">Game Description:</label>
    <div class="col-sm-4"> 
      <input type="text" name="game[description]" class="form-control" id="description" value="<%= @game.description %>" maxlength="100">
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="image">Game Image:</label>
    <div class="col-sm-4"> 
      <input type="text" name="game[image]" class="form-control" id="image" value="<%= @game.image %>" maxlength="100">
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="description">About the game:</label>
    <div class="col-sm-4"> 
      <textarea name="game[about]" class="form-control" id="about"><%= @game.about %></textarea>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="category">Game Categories (seperate with comma):</label>
    <div class="col-sm-4"> 
      <input type="text" name="game[category]" class="form-control" id="category" placeholder="action, roleplaying, card" maxlength="500">
    </div>
  </div>



  <div class="form-group"> 
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Update Game</button>
    </div>
  </div>

</form>
<hr>
<div class="col-sm-offset-2 col-sm-10">
	<h4>Delete this game from the database</h4>
</div>
<form action='/games/<%= @game.id %>' method='post' class="form-horizontal" role="form">
	<input type='hidden' name='_method' value='delete'>
	<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="form-group"> 
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">DELETE GAME</button>
    </div>
  </div>

</form>