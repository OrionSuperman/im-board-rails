<h3>Edit the address</h3>
<% flash.each do |name, msg| -%>
  <%= content_tag :div, msg, class: name %>
<% end -%>
<form action='/addresses/<%= @address.id %>' method='post'>
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<input type='hidden' name='_method' value='patch'>

<label for='street1'>Street Address</label>
<input type='text' name='address[street1]' value='<%= @address.street1 %>'>

<label for='street2'>Apt/suite</label>
<input type='text' name='address[street2]' value='<%= @address.street2 %>'>

<label for='city'>City</label>
<input type='text' name='address[city]' value='<%= @address.city %>'>

