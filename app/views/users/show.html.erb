<h1><%= @user.first_name %> <%= @user.last_name %></h1>

<p>User Description: <%= @user.description %></p>
<p>About <%= @user.first_name %>: <%= @user.about %></p>

<h3>User Games</h3>
<table class="table table-hover">
    <thead>
      <tr>
        <th>Game Name</th>
        <th>Description</th>
        <th>Players</th>
        <th>Game Length</th>
        <% if session[:user_id] == @user.id %>
        <th>Actions</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
    <% @games.each do |game| %>
    	<tr>
    		<td><a href="/games/<%= game.id %>"><%= game.name %></a></td>
    		<td><%= game.description %></td>
    		<td><%= game.minplayers %>-<%= game.maxplayers %> players</td>
    		<td><%= game.length %></td>
    		<% if session[:user_id] == @user.id %>
    		<td>
    			
    				<form action='/users/removegame' method='post' class="form-horizontal" role="form">
						<input type='hidden' name='game_id' value='<%= game.id %>'>
						<input type='hidden' name='_method' value='delete'>
						<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
					  <div class="form-group"> 
					    <div class="col-sm-10">
					      <button type="submit" class="btn btn-default">Remove</button>
					    </div>
					  </div>

					</form>
    				<% else %>
	    			<form action='/users/addgame' method='post' class="form-horizontal" role="form">
						<input type='hidden' name='game_id' value='<%= game.id %>'>
						<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
					  <div class="form-group"> 
					    <div class="col-sm-10">
					      <button type="submit" class="btn btn-default">Add to collection</button>
					    </div>
					  </div>

					</form>
					
    		</td>
    		<% end %>
    	</tr>
	<% end %>
    </tbody>
  </table>




<% if @user.id == session[:user_id] %>
	<a href='/users/<%= @user.id %>/edit'>Edit profile</a>
	
	
<% end %>